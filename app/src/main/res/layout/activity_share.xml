<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="xyz.egie.sharetoreadingam.ShareActivity"
    android:gravity="bottom|end"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/activity_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom|end"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="64dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yep_button"
            android:textAllCaps="false"
            android:background="@drawable/white_on_click"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:text="Yep"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nope_button"
            android:textAllCaps="false"
            android:background="@drawable/white_on_click"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:text="Nope"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send_button"
            android:textAllCaps="false"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:gravity="center"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/ic_navigate_next_white_24dp"
            android:drawableEnd="@drawable/ic_navigate_next_white_24dp"
            android:text="Share to Reading" />

    </LinearLayout>

</FrameLayout>
